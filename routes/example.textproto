# Sample Route using get_infra handler
context: "aws"
name: "infra_management"
version: 1
description: "A route for infrastructure management operations"

# Parameters for the route
parameter {
  name: "region"
  label: LABEL_OPTIONAL
  type: TYPE_STRING
}

parameter {
  name: "resource_type"
  label: LABEL_OPTIONAL
  type: TYPE_STRING
}

# Positions for the route
position {
  name: "Start"
  description: "Entry point for example route"
  handler: "infra.start"
  transition {
    label: "SUCCESS"
    position: "Make your move"
  }
  transition {
    label: "FAILURE"
    position: "Error Handler"
  }
}

position {
  name: "Make your move"
  description: "Really do it"
  handler: "aws.get_infra"
  transition {
    label: "SUCCESS"
    position: "Do some stuff"
  }
  transition {
    label: "FAILURE"
    position: "Error Handler"
  }
}

position {
  name: "Do some stuff"
  description: "Do some stuff"
  handler: "aws.get_infra"
  transition {
    label: "SUCCESS"
    position: "Finish him!"
  }
  transition {
    label: "FAILURE"
    position: "Error Handler"
  }
}

position {
  name: "Finish him!"
  description: "Finish him!"
  handler: "aws.get_infra"
  transition {
    label: "SUCCESS"
    position: "End"
  }
  transition {
    label: "FAILURE"
    position: "Error Handler"
  }
}

position {
  name: "Error Handler"
  description: "Handles all errors in the route"
  handler: "infra.error"
}

position {
  name: "End"
  description: "End of the route"
  handler: "infra.end"
}
